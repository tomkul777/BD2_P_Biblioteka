<UserControl x:Class="BD2_P_Biblioteka.UC_buttons_logged"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BD2_P_Biblioteka"
             mc:Ignorable="d" 
             d:DesignHeight="54" d:DesignWidth="740">
    <Grid>
        <Button x:Name="btnLogOut" Content="Wyloguj" HorizontalAlignment="Left" Margin="589,19,0,0" Width="151" FontSize="20" Click="BtnLogOut_Click"/>
