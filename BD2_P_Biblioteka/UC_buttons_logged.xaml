        <Button x:Name="btnAccount" Content="Konto" HorizontalAlignment="Left" Margin="249,19,0,0" Width="151" FontSize="20" Click="BtnAccount_Click"/>
        <Button x:Name="btnBorrows" Content="Wypożyczenia" HorizontalAlignment="Left" Margin="79,19,0,0" Width="151" FontSize="20" Click="BtnBorrows_Click"/>
        <Button x:Name="btnBasket" HorizontalAlignment="Left" Margin="25,19,0,0" Width="36" FontSize="20" Click="BtnBasket_Click">
            <Image Height="30" Width="32" Source="basket.jpg"/>
        </Button>
        <Label x:Name="lblBasketsCount" Content="0" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="#FFFD0000" FontWeight="Bold" RenderTransformOrigin="-0.143,0.002" Height="24" Margin="26,1,0,0"/>

    </Grid>
